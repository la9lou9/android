<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medication.MedicationDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvMedicationNameDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medication Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvDosageDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dosage: 10mg"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvFrequencyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequency: Once daily"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvStartDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Date: 2025-04-01"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvEndDateDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Date: 2025-05-01"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvReminderTimeDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Time: 08:00"
                    android:textSize="16sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEditMedication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Medication"
            android:backgroundTint="#22B3A6"/>

    </LinearLayout>
</ScrollView>