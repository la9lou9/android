<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Titre principal -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1070dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu" />


    <!-- Added marginTop to position the title at the desired spot -->

    <!-- Subtitle (Stay Organized, Stay Healthy) -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nabla"
        android:text="sa7tek fi jibek"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Stay Organized, Stay Healthy."
        android:textSize="25sp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp" />

    <!-- Grille de boutons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMedicaments"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/userf"
            android:padding="10dp"
            android:drawablePadding="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPrescriptions"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/calandref"
            android:padding="10dp"
            android:drawablePadding="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRendezVous"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/rendezvousf"
            android:padding="10dp"
            android:drawablePadding="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOrdonnances"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/pillsf"
            android:padding="10dp"
            android:drawablePadding="8dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUrgenceContacts"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/contactf"
            android:padding="10dp"
            android:drawablePadding="8dp"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSchedule"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:text=""
            android:drawableTop="@drawable/ordonnancef"
            android:padding="10dp"
            android:drawablePadding="8dp"

            />

    </GridLayout>

</RelativeLayout>
