<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Titre principal -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="1070dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Santé"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gérez votre santé facilement"
        android:textSize="16sp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- Grille de boutons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonMedicaments"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:text="Médicaments" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonPrescriptions"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:text="Prescriptions" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonRendezVous"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:text="Rendez-vous" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOrdonnances"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:text="Ordonnances" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonUrgenceContacts"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:drawableRight="@drawable/medicament1" <!-- Add your image here -->
             android:text="Contacts d'urgence" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSchedule"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/button_square"
            android:backgroundTint="#30D8C9"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:drawableRight="@drawable/ordonnance1" <!-- Add your image here -->
            android:text="Planning" />

    </GridLayout>

</RelativeLayout>
